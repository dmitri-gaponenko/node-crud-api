{
  "name": "node-crud-api",
  "version": "1.0.0",
  "description": "Technical requirements: https://github.com/AlreadyBored/nodejs-assignments/blob/main/assignments/crud-api/assignment.md",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "tsc && node --experimental-specifier-resolution=node ./dist/index.js",
    "lint": "eslint ./src --ext .ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitri-gaponenko/node-crud-api.git"
  },
  "author": "dmitri-gaponenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmitri-gaponenko/node-crud-api/issues"
  },
  "homepage": "https://github.com/dmitri-gaponenko/node-crud-api#readme",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-typescript": "^16.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts, json",
    "exec": "ts-node-esm --experimental-specifier-resolution=node ./src/index"
  },
  "eslintIgnore": ["*.test.ts"],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [ "node_modules", "src" ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "extensionsToTreatAsEsm": [".ts"],
    "rootDir": ".",
    "verbose": true,
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
          "useESM": true
      }
    }
  }
}
